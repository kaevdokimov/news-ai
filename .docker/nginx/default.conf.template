server {
    listen 80;
    server_name signalscan.ru www.signalscan.ru;

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://signalscan.ru$request_uri;
    }
}

server {
    listen 443 ssl;
    server_name signalscan.ru;

    ssl_certificate /etc/nginx/certs/fullchain.pem;
    ssl_certificate_key /etc/nginx/certs/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    
    proxy_connect_timeout 60s;
    proxy_read_timeout 300s;
    proxy_send_timeout 300s;
    send_timeout 300s;

    client_max_body_size 32m;

    gzip on;
    gzip_disable "msie6";
    gzip_buffers 16 8k;
    gzip_types text/plain application/xml text/css application/javascript application/json image/svg+xml application/font-woff2;
    gzip_min_length 1000;
    gzip_comp_level 5;
    gzip_proxied any;

    index index.php index.html;
    root /var/www/app/public;

    location / {
        add_header Connection close always;
        add_header x-forwarded-scheme $scheme;
        try_files $uri /index.php$is_args$args;
    }

    location ~ ^/index\.php(/|$) {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass news_ai_app:9000;
        fastcgi_index index.php;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PATH_INFO $fastcgi_path_info;
        fastcgi_send_timeout 300s;
        fastcgi_read_timeout 300s;

        fastcgi_param DOCUMENT_ROOT $realpath_root;
        add_header Connection close always;
        add_header x-forwarded-scheme $scheme;
        internal;
    }
}

server {
    listen 443 ssl;
    server_name www.signalscan.ru;

    ssl_certificate /etc/nginx/certs/fullchain.pem;
    ssl_certificate_key /etc/nginx/certs/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;

    return 301 https://signalscan.ru$request_uri;
}